{
    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Vue.js: Debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
        },
        {
            "name": "Vue.js: Run npm dev & Debug",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "action": "debugWithChrome",  
                "pattern": "Local:.+(https?://.+)",
                "uriFormat": "%s",
                "killOnServerStop": true,
            }
        }
    ]
}